{
    "layer": "top",
    "position": "top",
    "height": 36,
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["tray", "network", "pulseaudio", "battery", "custom/screenshot", "custom/picker", "custom/control-center"],
    // Modules configuration
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "hyprland/workspaces": {
        "persistent-workspaces": {
            "*": 5, // 5 workspaces by default on every monitor
        }
    },
    "hyprland/window": {
        "format": "{title}",
        "rewrite": {
            "tmux": "Kitty",
            "(.*) - Brave": "Brave",
            "(.*) Discord": "Discord"
        },
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "format": "{:%a %b %d %I:%M %p}",
        "on-click": "hyprctl dispatch exec '[float; size 80% 90%] gnome-calendar'"
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "states": [0,50],
        "format-icons": ["ÔÑë", "ÔÜÖ"]
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        "format-wifi": "Ôá´",
        "format-ethernet": "üñß",
        "tooltip-format": "Ôûñ {ifname} via {gwaddr}",
        "format-linked": "Ôûñ {ifname} (No IP)",
        "format-disconnected": "Disconnected ‚ö† {ifname}",
        // TODO: better handling of non-wifi connections...
        "on-click": "better-control --wifi"
    },
    "pulseaudio": {
      "scroll-step": 5,
      "format": "{icon}  {volume}%",
      "format-bluetooth": "Ôäî {icon} {volume}% {format_source}",
      "format-bluetooth-muted": "Ó¨§ Ôäî {icon} {format_source}",
      "format-muted": "Ó¨§  {format_source}",
      "format-source-muted": "ÔÑ±",
      "format-icons": {
        "default": [
          "ÔÄ¶",
          "ÔÄß",
          "ÔÄ®"
        ]
      },
      "on-click": "better-control --volume"
    },
    "custom/control-center": {
        "format": "ÓÆî",
        "on-click": "better-control"
    },
    "custom/screenshot": {
        "format": "Û∞ÑÄ",
        "on-click": "custom-screenshot.sh"
    },
    "custom/picker": {
        "format": "Ôáª",
        "on-click": "hyprpicker --autocopy"
    },
}
